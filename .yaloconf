

(*************************************)
(*   Never edit options files while  *)
(*       the program is running      *)
(*************************************)
(* SECTION : main                    *)
(* Options for Yalo itself           *)
(*************************************)

(* List of plugins to load *)
plugins = [ "yalo_plugin_ZANUDA" ]

(* List of directories to search for plugin files *)
search_path = [
	  "yalo_config" ;
]

profiles = [ "ocaml" "ocamlpro" ]

warnings = [ "YALO" ; "ZANUDA" ]

project = "yalo"
default_target = "yalo_test"

fileattrs = [
 "_YALO", { skipdir = true } ;
 "src/yalo_tests", { project = "yalo_test" } ;
 "src/yalo_config", { project = "ez_config" } ;
 "src/yalo_plugin_ocaml", { project = "yalo:yalo_plugin_ocaml" } ;
 "src/yalo_plugin_YALO", { project = [ yalo ; yalo_plugin_YALO ] } ;
 "src/yalo_plugin_FIND", { project = [ yalo ; yalo_plugin_FIND ] } ;
 "src/yalo_plugin_ZANUDA", { project = [ yalo ; yalo_plugin_ZANUDA ] } ;
 "src/yalo_plugin_ZANUDA/typed", { skipdir = true } ;
 "src/yalo_plugin_ZANUDA/untyped", { skipdir = true } ;
 "test/ocaml", { project = "yalo_test" } ;
]

YALO = {
  max_line_length = 80


}

