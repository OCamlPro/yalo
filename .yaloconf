

(*************************************)
(*   Never edit options files while  *)
(*       the program is running      *)
(*************************************)
(* SECTION : main                    *)
(* Options for Yalo itself           *)
(*************************************)

(* List of plugins to load *)
plugins = [
  "yalo_plugin_ZANUDA";
  "yalo_plugin_CAMELOT";
]

(* List of directories to search for plugin files *)
search_path = [
	  "yalo_config" ;
]

profiles = [ "ocaml" "ocamlpro" "ocp-indent" ]

warnings = [ "YALO" ; "ZANUDA" ; "?CAMELOT" ; "OCPINDENT+1" ]

project = "yalo"
default_target = "yalo_test"

fileattrs = [
 "_YALO", { skip = true } ;
 "src/yalo_test_YALO", { project = "yalo_test" } ;
 "src/yalo_test_ZANUDA", { project = "yalo_test" } ;
 "src/yalo_test_CAMELOT", { project = "yalo_test" } ;
 "src/yalo_config", { project = "ez_config" } ;
 "src/yalo_plugin_ocaml", { project = "yalo,yalo_plugin_ocaml" } ;
 "src/yalo_plugin_YALO", { project = [ yalo ; yalo_plugin_YALO ] } ;
 "src/yalo_plugin_FIND", { project = [ yalo ; yalo_plugin_FIND ] } ;
 "src/yalo_plugin_ZANUDA", { project = [ yalo ; yalo_plugin_ZANUDA ] } ;
 "src/yalo_plugin_ZANUDA/typed", { skip = true } ;
 "src/yalo_plugin_ZANUDA/untyped", { skip = true } ;
 "test/ocaml", { project = "yalo_test" } ;
]

YALO = {
  max_line_length = 80
  allowed_infix = [
     "Yalo_misc.Infix.!!"; "Yalo_misc.Infix.//";
     "Yalo_misc.Infix.=:=";

     "Yalo.V1.YALO_INFIX.!!"; "Yalo.V1.YALO_INFIX.//";
     "Yalo.V1.YALO_INFIX.=:=";

     "Ppx_deriving_yojson_runtime.>>=";

     "=|"; "=~" ;
     "Yalo_plugin_CAMELOT.Astutils.=|" ;
     "Yalo_plugin_CAMELOT.Astutils.=~" ;
     ]

}

